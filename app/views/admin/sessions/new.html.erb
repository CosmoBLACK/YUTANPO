<div class="container vh-100">
  <div class="row no-gutters py-5">
    <div class="box mx-auto text-center shadow-lg">
      <div>
        <h3 class="new-title text-white">ログイン</h3>
      </div>
      <div class="mx-5">
        <%= form_with model: @admin, url: admin_session_path do |f| %>

          <div class="field">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field pt-3">
            <%= f.label :password, "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "ログインしたままにする" %>
            </div>
          <% end %>

          <div class="actions pt-2 mb-4">
            <%= f.submit "ログイン", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
