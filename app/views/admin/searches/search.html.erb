<div class="container vh-100">
  <h2 class="text-center text-white shadow-sm my-3">「<%= params[:word] %>」の検索結果</h2>
  <% if @range == "Member" %><!-- 検索対象モデルがMemberの時 -->
    <!--会員リスト-->
    <%= render 'admin/members/index', members: @members %>

    <div class="d-flex justify-content-center">
      <%= paginate @members %>
    </div>
  <% else %><!-- 検索対象モデルがMemberではない時(= 検索対象モデルがOnsenの時) -->
    <%= link_to new_admin_onsen_path, class: "text-dark ml-2" do %>
      <h4>
        <i class="fa-solid fa-circle-plus heart_green"></i>
        温泉新規登録
      </h4>
    <% end %>

    <!-- タグリスト -->
    <%= render 'admin/onsens/tag_list', tag_list: @tag_list %>

    <!-- 温泉リスト -->
    <%= render 'admin/onsens/index', onsens: @onsens %>

    <div class="d-flex justify-content-center">
      <%= paginate @onsens %>
    </div>
  <% end %>
</div>