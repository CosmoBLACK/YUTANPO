<div class="container vh-100">
  <h2 class="text-center text-white shadow-sm mt-3">検索結果</h2>
  <% if @range == "Member" %><!-- 検索対象モデルがMemberの時 -->
    <table class="table table-bordered shadow-sm">
      <thead>
        <tr style="background-image: linear-gradient(to top, #c4c5c7 0%, #dcdddf 52%, #ebebeb 100%)">
          <th>会員ID</th>
          <th>ニックネーム</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody style="background-image: linear-gradient(to top, #a8edea 0%, #fed6e3 100%)">
        <% @members.each do |member| %>
          <tr>
            <td><%= member.id %></td>
            <td>
              <%= link_to admin_member_path(member.id), class: "text-body" do %>
                <%= member.name %>
              <% end %>
            </td>
            <td><%= member.email %></td>
            <% if member.deleted_flag == true %>
              <td class="text-secondary">退会</td>
            <% else %>
            　<td class="text-success">有効</td>
          　<% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="d-flex justify-content-center">
      <%= paginate @members %>
    </div>
  <% else %><!-- 検索対象モデルがMemberではない時(= 検索対象モデルがOnsenの時) -->
    <%= link_to new_admin_onsen_path, class: "text-dark ml-2" do %>
      <h4>
        <i class="fa-solid fa-circle-plus heart_green"></i>
        温泉新規登録
      </h4>
    <% end %>
    <!-- タグリスト -->
    <table class="mt-3 shadow-sm">
      <th width="150", style="background-image: linear-gradient(to top, #c4c5c7 0%, #dcdddf 52%, #ebebeb 100%)", class="text-center p-3">タグリスト</th>
      <td style="background-image: linear-gradient(to top, #a8edea 0%, #fed6e3 100%)", class="p-3">
        <% @tag_list.each do |list| %>
          <%=link_to list.tag_name, admin_search_tag_path(tag_id: list.id) %>
          <%= "(#{list.onsens.count})" %>
        <% end %>
      </td>
    </table>
    <table class="table table-bordered shadow-sm mt-4">
      <thead style="background-image: linear-gradient(to top, #c4c5c7 0%, #dcdddf 52%, #ebebeb 100%)">
        <tr>
          <th>温泉ID</th>
          <th>温泉名</th>
          <th>郵便番号</th>
          <th>住所</th>
        </tr>
      </thead>
      <tbody style="background-image: linear-gradient(to top, #a8edea 0%, #fed6e3 100%)">
        <% @onsens.each do |onsen| %>
          <tr>
            <td><%= onsen.id %></td>
            <td>
              <%= link_to admin_onsen_path(onsen) do %>
                <%= onsen.name %>
              <% end %>
            </td>
            <td><%= onsen.postal_code %></td>
            <td><%= onsen.address %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="d-flex justify-content-center">
      <%= paginate @onsens %>
    </div>
  <% end %>
</div>