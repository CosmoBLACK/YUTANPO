<div class="container">
  <div class="row">
    <h4 class="text-center mt-3">温泉一覧</h4>
    <span class="pt-3">
      <%= link_to new_admin_onsen_path, class: "text-secondary ml-2" do %>
        <i class="fa-solid fa-circle-plus fa-2x heart_green"></i>
      <% end %>
    </span>
  </div>
  <!--タグリスト-->
  <% @tag_list.each do |list| %>
    <%=link_to list.tag_name, admin_search_tag_path(tag_id: list.id) %>
    <%= "(#{list.onsens.count})" %>
  <% end %>
  <div class="row mt-3">
    <table class="table table-bordered col-12">
      <thead style="background-image: linear-gradient(to top, #c4c5c7 0%, #dcdddf 52%, #ebebeb 100%)">
        <tr>
          <th>温泉ID</th>
          <th>温泉名</th>
          <th>郵便番号</th>
          <th>住所</th>
        </tr>
      </thead>
      <tbody style="background-image: linear-gradient(to top, #a8edea 0%, #fed6e3 100%)">
        <% @onsens.each do |onsen| %>
          <tr>
            <td><%= onsen.id %></td>
            <td>
              <%= link_to admin_onsen_path(onsen) do %>
                <%= onsen.name %>
              <% end %>
            </td>
            <td><%= onsen.postal_code %></td>
            <td><%= onsen.address %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="d-flex justify-content-center">
  <%= paginate @onsens %>
</div>