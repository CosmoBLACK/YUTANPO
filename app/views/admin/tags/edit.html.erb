<div class="container my-4">
  <div class="row mb-3">
  <h4>タグ編集</h4>
</div>

<div class="field form-group">
  <%= form_with model: @tag, url: admin_tag_path(@tag), method: :patch do |f| %>
    <%= f.label :タグ名, class: "mr-5" %>
    <%= f.text_field :name, value: @tag_list, placeholder: "タグ名" %>
    <%= f.submit "変更を保存",  class: "btn btn-success" %>
  <% end %>
</div>