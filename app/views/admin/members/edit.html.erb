<div class="container vh-100">
  <h2 class="text-center text-white shadow-sm mt-3"><%= @member.name %>さんの会員情報編集</h2>
  <div class="text-center pt-5">
    <%= form_with model: @member, url: admin_member_path(@member), method: :patch do |f| %>
      <table class="mx-auto table table-bordered shadow-sm">
        <th class="status-title member_flag">
          <%= f.label :deleted_flag, '会員ステータス' %>
        </th>
        <td class="status-body member_deleted_flag">
          <%= f.radio_button :deleted_flag, false %>有効
          <%= f.radio_button :deleted_flag, true %>退会
        </td>
      </table>
      <div>
        <%= f.submit "変更を保存", class: "btn btn-success my-5" %>
      </div>
    <% end %>
  </div>
</div>