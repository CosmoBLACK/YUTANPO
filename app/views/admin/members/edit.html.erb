<div class="container">
  <div class="text-center">
    <h4><%= @member.name %>さんの会員情報編集</h4>
  </div>
  <div>
    <%= form_with model: @member, url: admin_member_path(@member), method: :patch do |f| %>
      <div class="form-gropu row">
        <%= f.label :deleted_flag, '会員ステータス', class: "col-3" %>
        <div>
          <%= f.radio_button :deleted_flag, false %>有効
          <%= f.radio_button :deleted_flag, true %>退会
        </div>
      </div>
      <div>
        <%= f.submit "変更を保存", class: "btn btn-success mt-3 mb-3 offset-3" %>
      </div>
    <% end %>
  </div>
</div>