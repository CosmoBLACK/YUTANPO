<table class="table table-bordered shadow-sm">
  <thead>
    <tr class="title">
      <th>会員ID</th>
      <th>ニックネーム</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody class="body">
    <% @members.each do |member| %>
      <tr>
        <td><%= member.id %></td>
        <td>
          <%= link_to admin_member_path(member.id), class: "text-body" do %>
            <%= member.name %>
          <% end %>
        </td>
        <td><%= member.email %></td>
        <% if member.deleted_flag == true %>
          <td class="text-secondary">退会</td>
        <% else %>
          <td class="text-success">有効</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>