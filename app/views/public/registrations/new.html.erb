<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-sm-auto text-center shadow-lg",
         style="background-image: linear-gradient(to top, #a8edea 0%, #fed6e3 100%)">
      <div style="background-image: linear-gradient(to top, #c4c5c7 0%, #dcdddf 52%, #ebebeb 100%)">
        <h1>新規登録</h1>
      </div>
      <%= form_with model: @member, url: member_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name, "ニックネーム" %><br>
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field pt-3">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autocomplete: "email" %>
        </div>
        
        <div class="field pt-3">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
        
        <div class="field pt-3">
          <%= f.label :password_confirmation, "パスワード（確認）" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        
        <div class="actions pt-3">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>

      <p class="pt-3"><span>--------</span> 登録は既にお済みですか？ <span>--------</span></p>
      <div class="btn btn-info mb-3">
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>